{
    "name": "nativescript-observable",
    "version": "1.0.0",
    "scripts": {
        "tsc": "tsc -skipLibCheck -d",
        "build": " cp README.md plugin/ && rm -f .tsbuildinfo && npm run tsc && npm run build.esm && node ./build.esm.js",
        "build.esm": "tsc -skipLibCheck --target es2015 --removeComments --outDir build/esm",
        "clean": "rimraf plugin/ios plugin/android plugin/**/*.d.ts plugin/**/*.js plugin/**/*.js.map plugin/node_modules plugin/package-lock.json",
        "plugin.watch.tsc": "npm run tsc -- -w",
        "publish": "npm run build && lerna publish",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@nativescript/core": "rc",
        "@types/node": "^12.12.0",
        "husky": "^3.0.9",
        "lerna": "^3.18.3",
        "prompt": "^1.0.0",
        "recursive-copy": "^2.0.10",
        "rimraf": "^3.0.2",
        "through2": "^3.0.1",
        "tns-platform-declarations": "rc",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "~3.6.4"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akylas/nativescript-observable.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Akylas/nativescript-observable/issues"
    },
    "homepage": "https://github.com/Akylas/nativescript-observable#readme",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
